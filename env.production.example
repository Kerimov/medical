# Production Environment Variables
# Скопируйте этот файл в .env.production и заполните реальными значениями

# JWT Secret для аутентификации (ОБЯЗАТЕЛЬНО - сгенерируйте новый!)
JWT_SECRET=your-production-jwt-secret-key-here

# OCR.space API Key (опционально)
OCR_SPACE_API_KEY=your-ocr-space-api-key

# Админские email адреса (через запятую)
NEXT_PUBLIC_ADMIN_EMAILS=admin@yourdomain.com

# База данных PostgreSQL (получите от Vercel или другого провайдера)
DATABASE_URL=postgresql://username:password@host:port/database

# OpenAI API Key (для AI функций)
OPENAI_API_KEY=your-openai-api-key

# NEXTAUTH_URL (замените на ваш домен)
NEXTAUTH_URL=https://your-app-name.vercel.app

# Порт сервера (Vercel автоматически устанавливает)
PORT=3000
